{
	"compilerOptions": {
		"allowJs": true,
		"target": "ES5",
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["dist", "src/*.test.js", "jest.config.js"]
}
